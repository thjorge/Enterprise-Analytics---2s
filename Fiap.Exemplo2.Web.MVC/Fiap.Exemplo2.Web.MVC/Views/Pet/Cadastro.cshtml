@model Fiap.Exemplo2.Web.MVC.Models.Pet
@{
    ViewBag.Title = "Casdatro";
}

<h2>Casdatro do Pet</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
        @ViewBag.mensagem
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(p => p.Nome)
        @Html.TextBoxFor(p => p.Nome, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Descricao)
        @Html.TextAreaFor(p => p.Descricao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.DataNascimento)
        @Html.TextBoxFor(p => p.DataNascimento, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Castrado, "O Pet é castrado")
        @Html.CheckBoxFor(p => p.Castrado)
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-success" />
}


