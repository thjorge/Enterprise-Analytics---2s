@model List<Fiap.Exemplo03.Web.MVC.Models.Aposta>
@{
    ViewBag.Title = "Listar";
}

<h2>Lista de Apostadores</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table">
    <tr>
        <th>Valor</th>        
        <th>Data da Aposta</th>
        <th>Dobradinha</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Valor</td>
            <td>@item.DataAposta.ToShortDateString()</td>
            <td>@(item.Dobadinha == true ?"Sim":"Não")</td>
            <td>
                @Html.ActionLink(" ", "Alterar"
                            , new { id = item.Id }
                            , new { @class = "glyphicon glyphicon-pencil btn btn-primary" })
                  @Html.ActionLink(" ", "Remover",
                            new { id = item.Id }
                            , new { @class = "glyphicon glyphicon-trash btn btn-danger" })
        </td>
    </tr>
    }
</table>
