@model List<Fiap.Exemplo03.Web.MVC.Models.Apostador>
@{
    ViewBag.Title = "Listar";
}

<h2>Lista de Apostadores</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table">
    <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Data de Nascimento</th>
        <th>Saldo</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>@item.DataNascimento.ToShortDateString()</td>
            <td>@item.Saldo</td>
            <td>
                @Html.ActionLink(" ", "Alterar"
                            , new { id = item.Id }
                            , new { @class = "glyphicon glyphicon-pencil btn btn-primary" })
            @Html.ActionLink(" ", "Remover",
                            new { id = item.Id }
                            , new { @class = "glyphicon glyphicon-trash btn btn-danger" })
        </td>
    </tr>
    }
</table>
