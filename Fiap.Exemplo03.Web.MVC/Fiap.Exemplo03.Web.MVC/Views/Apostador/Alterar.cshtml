@model Fiap.Exemplo03.Web.MVC.Models.Apostador
@{
    ViewBag.Title = "Alterar";
}

<h2>Alterar Apostador</h2>




@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(a => a.Nome)
        @Html.TextBoxFor(a => a.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Email)
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.DataNascimento)
        @Html.TextBoxFor(a => a.DataNascimento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Saldo)
        @Html.TextBoxFor(a => a.Saldo, new { @class = "form-control" })
    </div>

    <input type="submit" value="Salvar" class="btn btn-primary" />
  @Html.ActionLink("Cancelar","Listar","Apostador", new { @class= "btn btn-danger" })
}

